<% if @itinerary.photo.attached? %>
  <div class="trip-overview trip-overview-image" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path @itinerary.photo.key, crop: :scale %>')">
<% else %>
  <div class="trip-overview">
<% end %>
  <h1>Trip Overview</h1>
  <p><%= @itinerary.description %></p>
<div class="d-flex">
  <div class='d-flex align-items-center  details-icon'>
    <i class="fas fa-map-marker-alt"></i>
    <h2 class="detail-header">Total Stops: <%= @itinerary.locations.count %> </h2>
  </div>

  <div class="d-flex align-items-center" style="position: relative; top: 140%; left: 0%">

    <i class="fas fa-tag" style="color: white;"></i>
    <ul class="details-itinerary detail-header">
      <li style="font-weight: bold">Trip Type: </li>
      <% @itinerary.locations.each do |location| %>
      <li style="font-weight: bold"><%=location.tag_list%></li>
    <% end %>
    </ul>
  </div>
</div>

<div class="d-flex align-items-center details-icon" style="padding-left: 4%;">
  <i class="far fa-clock"></i>
  <h2 class="detail-header" id="trip-duration" data-duration="<%= itinerary.duration.to_json %>">Location Time: <%= duration(itinerary.duration) %>  </h2>
</div>

</div>

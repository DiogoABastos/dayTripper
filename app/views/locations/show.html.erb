<div class="row">

  <div class="col-4">
    <div class="location-show-card">
     <%= link_to itinerary_path(@itinerary) do %>
       <i class="far fa-times-circle exit-circle"></i>
      <% end %>
      <% if @location.photos.attached?%>
        <%= cl_image_tag @location.photos.last.key, :crop=>"scale", class: 'show-image' %>
      <% else%>
        <%= cl_image_tag 'yp95sgxwqvengyn1fwic', :crop=>"scale", class: 'show-image' %>
      <% end %>
      <h1><%= @location.name %></h1>
      <p><%= @location.description %></p>

      <div class="show-details">
        <div class="d-flex ml-1">
          <i class="far fa-clock"></i>
          <h2>Duration</h2>
        </div>
       <h1 class="ml-3"><%= duration(@location.duration)%></h1>
      </div>

      <div class="show-details">
        <div class="d-flex ml-1">
          <i class="fas fa-tag p-1"></i>
          <h2> Trip Tags</h2>
        </div>
        <h1 class="ml-3"><%= @location.category %></h1>
      </div>
    </div>
  </div>

  <div class="col-8 p-0">
    <div
    id="map" class="show-location-map"
    style="width: 100%;
    height: 88vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

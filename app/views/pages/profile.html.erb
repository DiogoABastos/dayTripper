    <div class="heading-wrapper">
      <div class="row">
        <div class="profile-img">
            <% if @current_user.photo.attached? %>
             <%= cl_image_tag @current_user.photo.key, :crop=>"scale", class: 'show-image' %>
            <% else %>
              <%= simple_form_for [@user], url: profile_path do |f| %>
                <%= f.input :photo, as: :file, label: 'Update photos' %>
                <%= f.button :submit, 'Add Photo', class: 'btn btn-outline-success' %>
              <% end %>
            <% end %>
          </div>
          <div class="col-sm-6 col-md-6 col-lg-4">

            <div class="info">
              <div style="font-size: 2.0rem;">

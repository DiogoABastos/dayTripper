<div class="background-img-new" style="background-image: url(https://images.pexels.com/photos/3737094/pexels-photo-3737094.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-xs-6">
        <div class="form-signup">
          <h2 style="margin-bottom: 15px; margin-top: 15px;">Sign up</h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-row align-items-center">
              <div class="col-auto">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          placeholder: "Jacques-Yves",
                          input_html: { autocomplete: "first_name" }%>
              </div>
              <div class="col-auto">
              <%= f.input :last_name,
                          required: true,
                          autofocus: true,
                          placeholder: "Cousteau",
                          input_html: { autocomplete: "last_name" }%>
              </div>
            </div>
            <div class="form-inputs">
              <%= f.input :username,
                          required: true,
                          autofocus: true,
                          placeholder: "cousteau1910",
                          input_html: { autocomplete: "username" }%>
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          placeholder: "cousteau@daytripper.com",
                          input_html: { autocomplete: "email" }%>
              <%= f.input :password,
                          required: true,
                          placeholder: "••••••",
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          required: true,
                          placeholder: "••••••",
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="form-row">
              <div class="col-auto">
              <%= f.input :age,
                          required: true,
                          autofocus: true,
                          placeholder: "87",
                          prompt: "Please select your age",
                          collection: 18..105,
                          input_html: { autocomplete: "age" }%>
              </div>
              <div class="col-auto">
              <%= f.input :gender,
                          required: true,
                          autofocus: true,
                          prompt: "Please select your gender",
                          collection: [['0', 'Male'], ['1', 'Female']], label_method: :second, value_method: :first,
                          input_html: { autocomplete: "gender" }%>
              </div>
            </div>
            <div class="form-actions">
            <p>
            <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
            </div>
            <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
